<% function niceDate(sqldate) {
	if(Object.prototype.toString.call(sqldate) === '[object Date]'){
		let year = sqldate.getFullYear();
		let m = sqldate.getMonth() + 1;
		let d = sqldate.getDate();
		return d + '-' + m + '-' + year;
	} else {
		return 'onbekend';
	}
   }
function getMeas(meas){
	if(patient_measurement == null){
		return 'onbekend';
	} else {
		if(patient_measurement[meas] === undefined || patient_measurement[meas] === null){
			return 'onbekend';
		} else {
			return patient_measurement[meas];
		}
	}
}
